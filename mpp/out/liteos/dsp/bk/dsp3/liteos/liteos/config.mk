-include $(LITEOSTOPDIR)/build/mk/los_config.mk

LITEOS_SUBDIRS  := $(LIB_SUBDIRS)

LITEOS_INCLUDE += $(LITEOS_KERNEL_INCLUDE) $(LITEOS_PLATFORM_INCLUDE) \
	          $(LITEOS_COMPAT_INCLUDE) $(LITEOS_DRIVERS_INCLUDE) \
                  $(LITEOS_SHELL_INCLUDE)

LITEOS_USR_INCLUDE = $(LITEOS_COMPAT_INCLUDE)

LITEOS_OSDRV_INCLUDE := $(LITEOS_INCLUDE)

LITEOS_LIBDEP   += $(LITEOS_BASELIB)
LITEOS_LIBS     := $(LITEOS_LIBDEP)

LITEOS_ASFLAGS  += $(LITEOS_ASOPTS) $(LITEOS_INCLUDE)

LITEOS_CFLAGS   += $(LITEOS_COPTS) $(LITEOS_CMACRO) \
		   $(LITEOS_INCLUDE) $(LITEOS_COPTS_EXTRA)

LITEOS_CXXFLAGS += $(LITEOS_CXXOPTS) $(LITEOS_CXXMACRO) \
		   $(LITEOS_CXXINCLUDE)
				
LITEOS_LDFLAGS += $(LITEOS_LD_OPTS) $(LITEOS_LD_PATH)

